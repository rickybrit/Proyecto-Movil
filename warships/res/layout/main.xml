<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/framePrincipal">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@android:color/background_dark" android:id="@+id/frameVertical"
            android:gravity="center" android:transitionGroup="false"
            android:baselineAligned="false" android:weightSum="1" android:visibility="visible"
            android:measureWithLargestChild="false">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:id="@+id/tituloApp" android:textSize="70sp"
                  android:textAlignment="center"
                  android:background="@android:color/transparent" android:textColor="#ff4456ff"
                  android:textStyle="bold|italic" android:autoText="false"
                  android:textIsSelectable="false"/>

        <ImageView
                android:layout_width="296dp"
                android:layout_height="217dp"
                android:id="@+id/imageView" android:layout_gravity="center_horizontal"
                android:background="@drawable/ship1" android:contentDescription="logoMain"/>
        <ViewSwitcher
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewSwitcher" android:layout_gravity="right"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Jugar"
                android:id="@+id/botonJugar" android:textSize="30sp"
                android:singleLine="false" android:textStyle="bold" android:enabled="true" android:clickable="true"
                android:background="#ff4456ff" android:textColor="@android:color/primary_text_dark"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Creditos"
                android:id="@+id/botonCreditos" android:layout_gravity="center_horizontal" android:textSize="30sp"
                android:singleLine="false" android:textStyle="bold"
                android:enabled="true" android:clickable="true"
                android:background="#ff4456ff" android:textColor="@android:color/primary_text_dark"/>
        <Space android:layout_width="match_parent" android:layout_height="10dp"
               android:id="@+id/space" android:layout_gravity="center_horizontal"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Salir"
                android:id="@+id/botonSalir" android:layout_gravity="center_horizontal" android:textSize="30sp"
                android:singleLine="false" android:textStyle="bold"
                android:enabled="true" android:clickable="true"
                android:background="#ff4456ff" android:textColor="@android:color/primary_text_dark"/>
    </LinearLayout>
</FrameLayout>